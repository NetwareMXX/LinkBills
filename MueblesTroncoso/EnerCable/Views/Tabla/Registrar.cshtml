
@{
    ViewBag.Title = "Tablas";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>Configuracion de Tablas</h2>
@section Scripts {
    @Scripts.Render("~/scripts/Operaciones.js")
    @Scripts.Render("~/scripts/Tabla/Registrar.js")


}


<div id="view" class="card">
    <div class="header">
        <h2>Registro de Tablas</h2>

        <ul class="header-dropdown m-r--5">

            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="material-icons">more_vert</i>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li><a id="aCapturar" href="javascript:void(0);" class=" waves-effect waves-block"><i class="material-icons">screen_rotation</i>Capturar</a></li>
                    <li><a href="javascript:void(0);" class=" waves-effect waves-block"><i class="material-icons">save</i>Guardar</a></li>
                    <li><a href="javascript:void(0);" class=" waves-effect waves-block"><i class="material-icons">cancel</i>Cancelar</a></li>
                    @*<li><a href="javascript:void(0);" class=" waves-effect waves-block"><i class="material-icons">delete</i>Eliminar</a></li>*@
                </ul>
            </li>
        </ul>
    </div>
    <div class="body">

        <div class="row clearfix">
            <div>
                <div class="panel-group" id="accordion_11" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-col-red">
                        <div class="panel-heading" role="tab" id="headingOne_11">
                            <h4 class="panel-title">
                                <a id="aPanel" role="button" data-toggle="collapse" data-parent="#accordion_11" href="#collapseOne_11" aria-expanded="false" aria-controls="collapseOne_11" class="collapsed">
                                    Capturar Información de Tablas
                                </a>

                            </h4>


                        </div>
                        <div id="collapseOne_11" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne_11" aria-expanded="false">
                            <div class="panel-body">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <form>
                                        <div class="row clearfix">
                                            <div class="col-sm-4">
                                                <label for="txtTabla">Tabla</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        <input type="hidden" value="0" id="hdIdTabla" />
                                                        <input id="txtTabla" class="form-control" placeholder="Ingrese la Tabla" type="text">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtEjercicio">Ejercicio</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        <input id="txtEjercicio" class="form-control" placeholder="Ingrese el Ejercicio" type="number">
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="col-sm-4">
                                                <label for="txtTablaC">Tabla NCRBON</label>
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        <input id="txtTablaC" class="form-control" placeholder="Ingrese la Tabla NCRBON" type="text">
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                        <div class="row clearfix">
                                            

                                            <div class="col-sm-4">
                                                <label for="ddlActivo">Activo</label>
                                                <select id="ddlActivo" class="combo form-control show-tick">
                                                    <option selected="selected" value="True">Activo</option>
                                                    <option value="False">Inactivo</option>
                                                </select>

                                            </div>
                                        </div>








                                        <div class="row clearfix">
                                            <div class="col-md-2">
                                                <button v-on:click="guardar" type="button" class="btn bg-red waves-effect">
                                                    <i class="material-icons">save</i>
                                                    <span>Guardar</span>
                                                </button>
                                            </div>
                                            <div class="col-md-2">
                                                <button v-on:click="cancelar" type="button" class="btn bg-red waves-effect">
                                                    <i class="material-icons">cancel</i>
                                                    <span>Cancelar</span>
                                                </button>
                                            </div>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>

        <div class="row clearfix">
            <div class="col-md-12">
                <div id="miGrid" kendo-grid="miGrid" class="MyGrid" k-rebind="KendoCulture" options="mainGridOptions"></div>


            </div>
        </div>





    </div>
</div>

